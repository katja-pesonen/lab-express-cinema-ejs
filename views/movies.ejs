<h1>Ironhack Cinema</h1>
<h2>Click on the movie to check the showtimes!</h2>


<div id="movies-page-div">
  <div class="d-flex align-content-stretch flex-wrap">

    <div class="card" style="width: 18rem;">
      <% movies.forEach(element => { %>
      <img src="<%= element.image %>" class="card-img-top" alt="movie image">
      <div class="card-body">
        <h5 class="card-title" style="font-size: 20px;"> <%= element.title %> </h5>
        <a href="/movies/<%= element._id %>" class="btn btn-primary">See more</a>
      </div>
      <% }) %>
    </div>
